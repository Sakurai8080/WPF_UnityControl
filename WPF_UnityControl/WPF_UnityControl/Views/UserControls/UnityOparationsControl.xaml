<UserControl
    x:Class="WPF_UnityControl.Control.UnityOparationsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_UnityControl.Control"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="250"
    Background="#FF131B1F"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style BasedOn="{StaticResource MaterialDesignRaisedButton}" TargetType="Button">
            <Setter Property="Height" Value="50" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <StackPanel Margin="10,30,10,10">
            <Image
                x:Name="imUnityLogo"
                Height="45"
                HorizontalAlignment="Center"
                Source="/Resources/Logo.png" />
            <Button
                x:Name="btConnect"
                Margin="0,20,0,0"
                Background="{StaticResource AppBaseColor}"
                Click="btConnect_Click"
                Content="Unity接続" />
            <Button
                x:Name="btSend"
                Margin="0,10,0,0"
                Background="{StaticResource AppBaseColor}"
                Click="btSend_Click"
                Content="シーンロード" />
            <Button
                x:Name="btFetchScene"
                Margin="0,10,0,0"
                Background="{StaticResource AppBaseColor}"
                Click="btFetchScene_Click"
                Content="シーン一覧取得" />
            <Button
                Margin="0,10,0,0"
                Background="{StaticResource AppBaseColor}"
                Click="btFetchScene_Click"
                Content="シーンデータ取得" />
            <Button
                Margin="0,10,0,0"
                Background="{StaticResource AppBaseColor}"
                Click="btFetchScene_Click"
                Content="シーンデータ保存" />
            <Button
                Margin="0,10,0,0"
                Background="{StaticResource AppBaseColor}"
                Click="btFetchScene_Click"
                Content="データ送信" />
            <Button
                Margin="0,10,0,0"
                Background="{StaticResource AppBaseColor}"
                Click="btFetchScene_Click"
                Content="クリア" />


        </StackPanel>
    </Grid>
</UserControl>
