<UserControl
    x:Class="WPF_UnityControl.Control.SceneListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_UnityControl.Control"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="400"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <materialDesign:PackIcon
                Margin="5,0"
                VerticalAlignment="Stretch"
                Kind="Panorama" />
            <TextBlock FontSize="16" Text="Unityシーン一覧" />
        </StackPanel>

        <Grid Grid.Row="1">
            <Border
                Background="Black"
                BorderBrush="{StaticResource 700Blush}"
                BorderThickness="0.8" />
            <ListView
                ItemContainerStyle="{StaticResource BaseListViewItem}"
                ItemsSource="{Binding SceneList}"
                SelectionMode="Single">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="Auto" HeaderContainerStyle="{StaticResource HiddenHeaderGridView}">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Label
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center"
                                        Content="{Binding}"
                                        FontSize="12" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

        </Grid>
    </Grid>
</UserControl>
