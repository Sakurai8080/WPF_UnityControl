<UserControl
    x:Class="WPF_UnityControl.Control.HierarchyControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_UnityControl.Control"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="400"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <materialDesign:PackIcon
                Margin="5,0"
                VerticalAlignment="Stretch"
                Kind="ViewList" />
            <TextBlock FontSize="16" Text="シーン Hierarchy" />
        </StackPanel>

        <Grid Grid.Row="1">
            <Border
                Background="{DynamicResource AppBackGround}"
                BorderBrush="{StaticResource 700Blush}"
                BorderThickness="0.8" />
            <TreeView ItemsSource="{Binding Hierarchy}">
                <TreeView.Resources>
                    <Style TargetType="TreeViewItem" />
                </TreeView.Resources>
            </TreeView>
        </Grid>
    </Grid>
</UserControl>
