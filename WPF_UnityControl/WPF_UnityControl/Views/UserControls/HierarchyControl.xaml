<UserControl
    x:Class="WPF_UnityControl.Control.HierarchyControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_UnityControl.Control"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="500"
    d:DesignWidth="400"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <materialDesign:PackIcon
                Margin="5,0"
                VerticalAlignment="Stretch"
                Kind="ViewList" />
            <TextBlock FontSize="16" Text="シーン Hierarchy" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <materialDesign:PackIcon Kind="Filter" />
            <ComboBox
                Width="100"
                Height="20"
                Padding="5,0,10,0"
                HorizontalAlignment="Right"
                materialDesign:HintAssist.Hint="TAG"
                Background="{StaticResource AppBackGround}"
                BorderBrush="{StaticResource 700Blush}"
                BorderThickness="1"
                Style="{StaticResource MaterialDesignFilledComboBox}">
                <ComboBoxItem Content="Player" />
                <ComboBoxItem Content="Enemy" />
                <ComboBoxItem Content="UI" />
            </ComboBox>
        </StackPanel>
        <Grid Grid.Row="1">
            <Border
                Background="Black"
                BorderBrush="{StaticResource 700Blush}"
                BorderThickness="0.8" />
            <TreeView x:Name="hierarchy" ItemsSource="{Binding HierarchyTree.Value}" SelectedItemChanged="hierarchy_SelectedItemChanged">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <TextBlock Text="{Binding Name}" />
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </Grid>
    </Grid>
</UserControl>
